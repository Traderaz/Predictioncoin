rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Meme images - Allow anyone to read and write
    match /memes/{imageId} {
      allow read: if true;
      allow write: if request.resource.size < 10 * 1024 * 1024  // Max 10MB
                && request.resource.contentType.matches('image/.*'); // Only images
    }
  }
}

